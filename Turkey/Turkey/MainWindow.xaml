<Window x:Class="Turkey.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Turkey" Height="350" Width="525" Icon="resources/turkey-icon.png">
	<Grid Background="#FF272727">
		<TextBox Name="consoleInputBox" HorizontalAlignment="Left" Height="23" Margin="115,243,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="246">
			<TextBox.InputBindings>
				<KeyBinding Key="Enter" Command="{Binding EnterKeyCommand}" />
			</TextBox.InputBindings>
		</TextBox>
		<Button Content="Button" HorizontalAlignment="Left" Margin="384,254,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
		<ToolBarTray HorizontalAlignment="Left" Height="35" VerticalAlignment="Top" Width="525"/>
	</Grid>
	<Window.Resources>
		<Image x:Key="WindowIcon" />
	</Window.Resources>
</Window>
